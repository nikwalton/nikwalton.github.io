---
import "../globals.css"
import Image from "astro/components/Image.astro";
import ClientRouter from "astro/components/ClientRouter.astro";
import { fade } from "astro:transitions";
---

<html lang="en" transition:animate={fade({duration: '0.1s'})}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Portfolio website for Nikolaus Walton a software engineer and casual designer."  />
    <title>Nikolaus Walton</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen">
    <div
      class="container-2xl min-w-screen sticky top-0 z-50 mx-auto mb-10 flex flex-col flex-wrap items-center bg-white/20 p-5 shadow-md backdrop-blur-lg md:flex-row"
    >
      <p class="font-serif font-black">NW</p>

      <div
        class="flex flex-wrap items-center justify-center text-base font-light md:ml-5 md:mr-auto"
      >
        <a
          class="mr-2 rounded-s-full bg-slate-100 p-2 pl-3 shadow-md transition ease-in-out hover:bg-emerald-600 hover:text-white"
          href="/">Home</a
        >
        <a
          class="mr-2 rounded-md bg-slate-100 p-2 shadow-md transition ease-in-out hover:bg-emerald-500 hover:text-white"
          href="/projects/">Projects</a
        >
        <a
          class="mr-2 rounded-md bg-slate-100 p-2 shadow-md transition ease-in-out hover:bg-emerald-500 hover:text-white"
          href="https://github.com/nikwalton">Github</a
        >
        <a
          class="mr-2 rounded-e-full bg-slate-100 p-2 pr-3 shadow-md transition ease-in-out hover:bg-emerald-500 hover:text-white"
          href="https://www.linkedin.com/in/nikolaus-walton-565a07113"
          >LinkedIn</a
        >
      </div>
    </div>
    <slot />
    
    <hr />
    <footer class="p-2">
      <p class="text-sm leading-none">&copy 2025 nikolaus walton. website powered by <a class="text-blue-600" href="https://astro.build/">Astro</a></p>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
