---
const {name, description, tags, link} = Astro.props;
---
<div class="max-w-sm rounded overflow-hidden shadow-lg">
    <div class="px-6  py-4">
        <div class="font-bold text-xl mb-2">{name}</div>
        <p>{description}</p>
        <a>{link}</a>
        <div class="px-6 pt-4 pb-1">
            <span class="inline-block bg-gray-200/20 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{tags}</span>
        </div>
    </div>
</div>